{% include ['header/header.html.twig', 'base.html.twig' ,] %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    </head>
   
    <body style="background-color: #F0F8FF">
        {% block body %}
        <div class="mt-4 container">
        <img class=" d-flex justify-content-end  " style="height: 6rem; width:25rem; margin : auto" src={{asset('media/El_KamelBG3copy.jpg')}}  alt="...">
         {% include 'article/filter.html.twig' with {form: form} only %}
        </div>
        {% for article in articles %}
        <div class="container mt-4 ">
        <div class="card m-4 w-75 p-3 shadow " >
  <div class="row g-0">
    <div class="col-md-4">
      <img style="max-width : 100% ;" src="{{ vich_uploader_asset(article, 'imageFile') }}"  >
       </div>
          <div class="col-md-8">
            <div class="card-body">
             <h4> <a href="{{ path('articles_details', {"id": article.id })}}"  style="text-decoration: none;" >{{article.title}}</a></h4>
                <p class="card-text" style="overflow-y:hidden;text-overflow:ellipsis; max-height:4.5em;">{{article.content}}</p>
                <p class="card-text"><small class="text-muted">{{article.Category}}</small></p>
                <p class="card-text"><small class="text-muted"></small></p>
                  <p class="card-text"><small class="text-muted"> <i class="bi bi-clock"></i> {{article.createdAt|date('Y-m-d H:i')}}</small></p>
              </div>
             </div>
           </div>
           </div>
        </div>
        {% endfor %}
         <div class="navigation d-flex justify-content-center mt-4">
         {{knp_pagination_render(articles)}}
      </div>
        {% endblock %}
    </body>
</html>
{% include 'footer/footer.html.twig' %}